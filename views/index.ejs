<%- include('partials/header'); -%>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% var x=blogs.length %>
            <% for(var i=0;i<x;i++) { %>
                <div class="item">
                    <div class="image">
                        <img src="<%=blogs[i].image%>" alt="">
                    </div>
                    <div class="content">
                        <a href="/blogs/<%= blogs[i]._id %>" class="header"><%=blogs[i].title%></a>
                        <div class="meta">
                            <span><%=blogs[i].created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%-blogs[i].body.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= blogs[i]._id %>">
                                Read More
                                <i class="right chevron small icon"></i>
                            </a>
                        </div>
                    </div>                    
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer'); -%>